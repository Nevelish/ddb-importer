{
  "manifest_version": 2,
  "name": "DnD Beyond to Foundry",
  "version": "1.0.0",
  "description": "Export DnD Beyond characters to FoundryVTT",
  "applications": {
    "gecko": {
      "id": "ddb-foundry@addon.local"
    }
  },
  "permissions": [
    "cookies",
    "activeTab",
    "clipboardWrite",
    "*://*.dndbeyond.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "D&D Beyond to Foundry",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}